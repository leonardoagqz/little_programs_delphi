  System.Math;

var
angulo, seno, altura, seno90, hipo : Real;
begin
    write ('Informe a Altura: ');
    Readln(altura);
    Writeln('Valor angulo ');
    Readln(angulo);

    seno90:= Sin(DegToRad(90));
    seno :=  Sin(DegToRad(angulo));


    Writeln('Seno = ', seno );
    Writeln('Seno = ', seno90 );
    Readln;



end.


